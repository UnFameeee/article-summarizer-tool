<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Back button -->
            <a href="/" class="btn btn-link text-muted mb-4">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h3 mb-4 text-center">Summary Detail</h1>

                    <!-- URL Section -->
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">
                            <i class="fas fa-link me-2"></i>Source URL
                        </h5>
                        <a href="<%= summary.url %>" target="_blank" class="d-block p-3 bg-light rounded text-break hover-link">
                            <%= summary.url %>
                            <i class="fas fa-external-link-alt ms-2 small"></i>
                        </a>
                    </div>

                    <!-- Summary Level -->
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">
                            <i class="fas fa-layer-group me-2"></i>Summary Level
                        </h5>
                        <span class="badge bg-primary px-3 py-2 rounded-pill">
                            <%= summary.summary_level.charAt(0).toUpperCase() + summary.summary_level.slice(1) %>
                        </span>
                    </div>

                    <!-- Prompt Section -->
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">
                            <i class="fas fa-quote-left me-2"></i>Used Prompt
                        </h5>
                        <div class="prompt-box p-3 bg-light rounded">
                            <%= summary.prompt || 'Default prompt was used' %>
                        </div>
                    </div>

                    <!-- Summary Content -->
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">
                            <i class="fas fa-file-alt me-2"></i>Summary Content
                        </h5>
                        <div class="summary-content bg-white rounded p-4 border">
                            <%- summary.summary_html %>
                        </div>
                    </div>

                    <!-- Metadata -->
                    <div class="text-muted small">
                        <i class="fas fa-clock me-2"></i>
                        Created at: <%= new Date(summary.created_at).toLocaleString() %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.hover-link {
    text-decoration: none;
    color: #2d3436;
    transition: all 0.3s ease;
}

.hover-link:hover {
    background-color: #e9ecef;
    color: #3498db;
}

.prompt-box {
    font-family: 'Courier New', monospace;
    color: #2d3436;
    line-height: 1.6;
}

.summary-content {
    box-shadow: inset 0 0 0.5rem rgba(0,0,0,.05);
}

.badge {
    font-weight: 500;
}

.card {
    border: none;
    border-radius: 12px;
}

.text-muted {
    color: #636e72 !important;
}

.bg-light {
    background-color: #f8f9fa !important;
}

.btn-link {
    text-decoration: none;
    font-weight: 500;
    padding: 0;
}

.btn-link:hover {
    color: #3498db !important;
}
</style> 