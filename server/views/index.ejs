    text-decoration: none;
    color: #2d3436;
    transition: color 0.3s ease;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.hover-link:hover {
    color: #72d1a8;
}

.summary-preview {
    font-size: 0.875rem;
    color: #636e72;
    line-height: 1.6;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
}

.form-control:focus,
.form-select:focus {
    border-color: #72d1a8;
    box-shadow: 0 0 0 0.2rem rgba(114, 209, 168, 0.25);
}

.badge {
    font-weight: 500;
    font-size: 0.75rem;
}

.card-body {
    padding: 1.25rem;
}

.card-title {
    color: #2d3436;
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.4;
}

/* Pagination styles */
.pagination {
    margin-bottom: 0;
}

.page-link {
    color: #72d1a8;
    border: none;
    padding: 0.5rem 0.75rem;
    margin: 0 0.25rem;
    border-radius: 6px;
    transition: all 0.2s ease;
}

.page-link:hover {
    background-color: #e9ecef;
    color: #72d1a8;
}

.page-item.active .page-link {
    background-color: #72d1a8;
    color: white;
}

.page-item.disabled .page-link {
    color: #6c757d;
    pointer-events: none;
    background-color: transparent;
}
</style> 